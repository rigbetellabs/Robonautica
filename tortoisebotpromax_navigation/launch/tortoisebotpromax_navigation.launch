<?xml version="1.0" ?>

<launch>
  <!-- Arguments -->
  <arg name="map_file" default="office_01"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="exploration" default="true"/>

  <!-- Map Publishing Node for Exploration-->
  <group if="$(arg exploration)">
    <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros" type="cartographer_occupancy_grid_node" args="-resolution 0.01" />
  </group>

  <!-- Map server for Map-based Navigation-->
  <group unless="$(arg exploration)">
    <node pkg="map_server" name="map_server" type="map_server" args="$(find tortoisebotpromax_navigation)/maps/$(arg map_file).yaml"/>
  </group>

  <!-- rviz -->
  <node pkg="rviz" type="rviz" name="rviz" required="false" args="-d $(find tortoisebotpromax_navigation)/rviz/tortoisebotpromax_navigation.rviz"/> 

  <!-- move_base -->
  <include file="$(find tortoisebotpromax_navigation)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>


  
</launch>
